@model ConsultorioMedico.Models.Medico

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Médico</h1>

<h3>Tem certeza que deseja excluir esse médico?</h3>
<div>
    <p>
        <h4>Médico</h4>
    </p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.especialidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.especialidade.descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cidade.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UFID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UFID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
