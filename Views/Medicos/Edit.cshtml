@model ConsultorioMedico.Models.Medico

<h1>Editar médico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="especialidadeID" class="control-label"></label>
                <select asp-for="especialidadeID" class="form-control" asp-items="ViewBag.especialidadeID"></select>
                <span asp-validation-for="especialidadeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco" class="control-label"></label>
                <input asp-for="endereco" class="form-control" />
                <span asp-validation-for="endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefone" class="control-label"></label>
                <input asp-for="telefone" class="form-control" />
                <span asp-validation-for="telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidadeID" class="control-label"></label>
                <select asp-for="cidadeID" class="form-control" asp-items="ViewBag.cidadeID"></select>
                <span asp-validation-for="cidadeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UFID" class="control-label"></label>
                <input asp-for="UFID" class="form-control" readonly/>
                <span asp-validation-for="UFID" class="text-danger"></span>
            </div>
            <input type="submit" value="Salvar" class="btn btn-success" />
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index", "Medicos")'">
                Voltar
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
