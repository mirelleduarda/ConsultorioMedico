@model IEnumerable<ConsultorioMedico.Models.Especialidade>

@{
    ViewData["Title"] = "Index";
}
<h1 style="background-color: #007e7359; height: 3.6rem;">
    Especialidades Cadastradas
</h1>

<table class="table table-striped" style="background-color: #007e7326;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th style="text-align: end;">
                <button type="button" class="btn" style="background-color: #061728; color: white" onclick="window.location.href='@Url.Action("Create")'">Cadastrar Nova Cidade</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td style="text-align: right;">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
