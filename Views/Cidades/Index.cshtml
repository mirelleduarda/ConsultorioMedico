@model IEnumerable<ConsultorioMedico.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1 style="background-color: #ccd187; height: 3.6rem;">
    Cidades Cadastradas
</h1>



<table class="table table-striped" style="background-color: #edf1b0;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF)
            </th>
			<th style="text-align: end;">
                <button type="button" class="btn" style="background-color: #061728; color: white" onclick="window.location.href='@Url.Action("Create")'">Cadastrar Nova Cidade</button>
			</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UF)
            </td>
            <td style="text-align: right;">
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-warning" >Editar</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
