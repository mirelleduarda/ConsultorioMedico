@model ConsultorioMedico.Models.Cidade

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Cidade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 6px">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index", "Cidades")'">
                    Voltar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
