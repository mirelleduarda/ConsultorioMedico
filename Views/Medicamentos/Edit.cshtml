@model ConsultorioMedico.Models.Medicamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Medicamento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtdeEstoque" class="control-label"></label>
                <input asp-for="qtdeEstoque" class="form-control" min="0" max="100" step="1" />
                <span asp-validation-for="qtdeEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estoqueMin" class="control-label"></label>
                <input asp-for="estoqueMin" class="form-control" min="0" max="100" step="1" />
                <span asp-validation-for="estoqueMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estoqueMax" class="control-label"></label>
                <input asp-for="estoqueMax" class="form-control" min="0" max="100" step="1" />
                <span asp-validation-for="estoqueMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precoUnitario" class="control-label"></label>
                <input asp-for="precoUnitario" class="form-control" />
                <span asp-validation-for="precoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 6px">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index", "Medicamentos")'">
                    Voltar
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
