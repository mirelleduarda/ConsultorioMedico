<div>
    <p>
        <h4>Mediamento</h4>
    </p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.qtdeEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.qtdeEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estoqueMin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estoqueMin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estoqueMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estoqueMax)
        </dd>
        <dt class="col-sm-2">
